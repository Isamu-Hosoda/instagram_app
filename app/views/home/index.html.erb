<h1>home</h1>

<div>
  <%= link_to 'logout', destroy_user_session_path, method: :delete %>
</div>

<div>
  <%= link_to '写真投稿', [:new, :photo] %>
</div>

<% User.all.each do |user| %>
  <div>
    <%= link_to user.email, [user] %>
  </div>
<% end %>

<hr>

<p>フォローしているユーザーの投稿</p>

<% @feeds.each do |photo| %>
  <div>
    <div>
      <%= link_to photo.user.email, [photo.user] %>
    </div>
    <div>
      <%= photo.caption %>
    </div>
    <div>
      <%= image_tag photo.image, :size => '300x300' %>
    </div>
  </div>
<% end %>