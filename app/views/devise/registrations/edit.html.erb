
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', html: { method: :put }, local: true do |f| %>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
  </div>
  
  <div class="field">
    <%= f.label :password, "パスワード変更" %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード変更(確認)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
  </div>

  <div style="margin-top: 20px;">
    <%= f.submit "変更する", class: 'button is-primary'%>
  </div>
  <div style="margin-top: 20px;">
    <%= link_to  "マイページへ", edit_user_path(current_user) %>
  </div>
<% end %>


