<% @photos.each do |photo| %>
  <div class="card mb-4">
    <div class="card-content">  
      <div>
        <%= link_to photo.user.email, [photo.user] %>
      </div>
      <div>
        <%= photo.caption %>
      </div>
    </div>
    <div class="card-image">
      <div class="image">
        <%= link_to [photo] do%>
            <%= image_tag photo.image, :size => '300x300' %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>